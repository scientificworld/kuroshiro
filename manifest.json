{
	"manifest_version": 2,

	"name": "KuroShiro",
	"version": "1.0",
	"description": "Force light or dark theme for specified website(s)",
	"developer": {
		"url": "https://github.com/scientificworld/kuroshiro"
	},

	"icons": {
		"32": "icon.png"
	},

	"default_locale": "en",

	"background": {
		"scripts": ["set_theme.js"]
	},

	"browser_action": {
		"default_popup": "popup/popup.html"
	},

	"permissions": [
		"storage",
		"browserSettings",
		"tabs"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "kuroshiro_ext@koishi514.moe"
		}
	}
}
